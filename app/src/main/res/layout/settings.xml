<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <!-- 타이틀 / Title -->
        <TextView
            android:id="@+id/O-K"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/one"
            android:text="O-K"
            android:textSize="45dp" />


        <!--슬라이드 메뉴-->
        <Button
            android:id="@+id/btnMenu"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/menu_button"
            />

        <LinearLayout
            android:id="@+id/slideMenu"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorMain"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginBottom="50dp"
                android:fontFamily="@font/one"
                android:textSize="35dp"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:layout_gravity="center"
                android:text="MENU"/>

            <Button
                android:id="@+id/closet_menu"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/closet"
                android:fontFamily="@font/one"
                android:textSize="30dp" />

            <Button
                android:id="@+id/weather_menu"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/weather_icon"
                android:fontFamily="@font/one"
                android:textSize="30dp" />



            <Button
                android:id="@+id/setting_menu"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/settings"
                android:fontFamily="@font/one"
                android:textSize="30dp" />
        </LinearLayout>


        <!-- 푸쉬 설정 타이틀 / Push setting title -->
        <TextView
            android:id="@+id/push_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="130dp"
            android:fontFamily="@font/one"
            android:text="푸쉬 설정"
            android:textSize="25dp" />


        <TableLayout
            android:id="@+id/push_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/push_setting"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/round"
            android:orientation="vertical"
            android:padding="20dp"
            android:stretchColumns="1">

            <!-- 첫번째 줄 / First Row-->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/one"
                    android:text="날씨에 맞은 옷 추천 푸시 알림"
                    android:textColor="#ffffff"
                    android:textSize="18dp" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/clean_push"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false" />

            </TableRow>


            <!-- 두번째 줄 / Second Row-->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/one"
                    android:text="★ 알림은 매일 오전 7시에 울립니다!"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />



            </TableRow>

        </TableLayout>


        <!-- 테마 설정 타이틀 / Theme setting title -->
        <TextView
            android:id="@+id/theme_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/push_table"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/one"
            android:text="참조 / Reference"
            android:textSize="25dp" />


        <TextView
            android:background="@drawable/round"
            android:fontFamily="@font/one"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/theme_setting"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:padding="20dp"
            android:text="참조는 여기저기 여기저기\n 여기 저기~~"/>



    </RelativeLayout>


</LinearLayout>