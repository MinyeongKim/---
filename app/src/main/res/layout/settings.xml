<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <!-- 타이틀 / Title -->
        <TextView
            android:id="@+id/O-K"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/one"
            android:text="O-K"
            android:textSize="45dp" />


        <!--슬라이드 메뉴-->
        <Button
            android:id="@+id/btnMenu"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/menu_button"
            />

        <LinearLayout
            android:id="@+id/slideMenu"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#44000000"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="60dp"
                android:fontFamily="@font/one"
                android:textSize="35dp"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:layout_gravity="center"
                android:text="MENU"/>

            <Button
                android:id="@+id/closet_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/add_button"
                android:gravity="left|center_vertical"
                android:fontFamily="@font/one"
                android:textSize="30dp"
                android:text="옷장"/>

            <Button
                android:id="@+id/weather_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/add_button"
                android:gravity="left|center_vertical"
                android:fontFamily="@font/one"
                android:textSize="30dp"
                android:text="날씨"/>

            <Button
                android:id="@+id/coordi_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/add_button"
                android:gravity="left|center_vertical"
                android:fontFamily="@font/one"
                android:textSize="30dp"
                android:text="코디"/>

            <Button
                android:id="@+id/setting_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/add_button"
                android:gravity="left|center_vertical"
                android:fontFamily="@font/one"
                android:textSize="30dp"
                android:text="설정"/>
        </LinearLayout>


        <!-- 푸쉬 설정 타이틀 / Push setting title -->
        <TextView
            android:id="@+id/push_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="130dp"
            android:fontFamily="@font/one"
            android:text="푸쉬 설정"
            android:textSize="25dp" />


        <TableLayout
            android:id="@+id/push_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/push_setting"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/round"
            android:orientation="vertical"
            android:padding="20dp"
            android:stretchColumns="1">

            <!-- 첫번째 줄 / First Row-->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/one"
                    android:text="날씨에 맞은 옷 추천 푸시 알림"
                    android:textColor="#ffffff"
                    android:textSize="18dp" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/recommand_push"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false" />

            </TableRow>


            <!-- 두번째 줄 / Second Row-->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/one"
                    android:text="옷 정리 푸시 알림"
                    android:textColor="#ffffff"
                    android:textSize="18dp" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/clean_push"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                     />

            </TableRow>

        </TableLayout>


        <!-- 테마 설정 타이틀 / Theme setting title -->
        <TextView
            android:id="@+id/theme_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/push_table"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/one"
            android:text="테마 설정"
            android:textSize="25dp" />



        <RadioGroup
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/radGroupTheme"
            android:background="@drawable/round"
            android:layout_below="@+id/theme_setting"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:padding="20dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radBtnGreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_margin="4dp"
                android:text="청록색"
                android:textSize="18dp"
                android:fontFamily="@font/one"
                android:textColor="#ffffff"
                android:layoutDirection="rtl"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:checked="true">
            </RadioButton>

            <RadioButton
                android:id="@+id/radBtnLightGreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_margin="4dp"
                android:checked="false"
                android:text="옅은 청록색"
                android:fontFamily="@font/one"
                android:textColor="#ffffff"
                android:layoutDirection="rtl"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:textSize="18dp">
            </RadioButton>


            <RadioButton
                android:id="@+id/radBtnYellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_margin="4dp"
                android:text="파스텔톤 노란색"
                android:fontFamily="@font/one"
                android:textColor="#ffffff"
                android:checked="false"
                android:layoutDirection="rtl"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:textSize="18dp">
            </RadioButton>


            <RadioButton
                android:id="@+id/radBtnLightPink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_margin="4dp"
                android:checked="false"
                android:text="옅은 분홍색"
                android:fontFamily="@font/one"
                android:textColor="#ffffff"
                android:layoutDirection="rtl"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:textSize="18dp">
            </RadioButton>


            <RadioButton
                android:id="@+id/radBtnPink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_margin="4dp"
                android:text="분홍색"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:fontFamily="@font/one"
                android:layoutDirection="rtl"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:checked="false">
            </RadioButton>
        </RadioGroup>


    </RelativeLayout>


</LinearLayout>