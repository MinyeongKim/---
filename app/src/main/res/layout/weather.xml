<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- 타이틀 / Title -->
        <TextView
            android:id="@+id/O-K"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/one"
            android:text="O-K"
            android:textSize="45dp" />

        <!-- 새로고침 버튼 / refresh button (weather) -->
        <Button
            android:id="@+id/refresh"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/refresh"
            android:scaleType="fitXY"
            android:layout_toRightOf="@+id/O-K"
            />


        <!--슬라이드 메뉴-->
        <Button
            android:id="@+id/btnMenu"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/menu_button"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/slideMenu"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#44000000"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="60dp"
                    android:fontFamily="@font/one"
                    android:textSize="35dp"
                    android:textStyle="bold"
                    android:textColor="#ffffffff"
                    android:layout_gravity="center"
                    android:text="MENU"/>

                <Button
                    android:id="@+id/closet_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/add_button"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/one"
                    android:textSize="30dp"
                    android:text="옷장"/>

                <Button
                    android:id="@+id/weather_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/add_button"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/one"
                    android:textSize="30dp"
                    android:text="날씨"/>

                <Button
                    android:id="@+id/coordi_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/add_button"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/one"
                    android:textSize="30dp"
                    android:text="코디"/>

                <Button
                    android:id="@+id/setting_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/add_button"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/one"
                    android:textSize="30dp"
                    android:text="설정"/>
            </LinearLayout>

            <!--Body-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="130dp"
                android:orientation="vertical">

                <!-- 날씨 정보 불러오는 곳 / Weather Box -->
                <TextView
                    android:background="@drawable/round"
                    android:id="@+id/weatherBox"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/one"
                    android:textSize="18dp"
                    />

                <!-- 추천 목록 타이틀 / Title of recommand list -->
                <TextView
                    android:id="@+id/recommandTitle"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/one"
                    android:textSize="20dp"
                    android:text="추천 목록"
                    />

                <!-- 리스트목록 / list -->
                <Spinner
                    android:id="@+id/list"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:entries="@array/category"
                    android:fontFamily="@font/one"
                    />

                <TableLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:id="@+id/clothesTable"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">

                    <!-- 첫번째 줄 / First row of Clothes -->
                    <TableRow>
                        <TextView
                            android:id="@+id/line1_1"
                            android:layout_marginLeft="30dp"
                            android:layout_height="90dp"
                            android:layout_width="90dp"
                            />

                        <TextView
                            android:id="@+id/line1_2"
                            android:layout_marginLeft="10dp"
                            android:layout_height="90dp"
                            android:layout_width="90dp"
                            />

                        <TextView
                            android:id="@+id/line1_3"
                            android:layout_marginLeft="10dp"
                            android:layout_height="90dp"
                            android:layout_width="90dp"
                            />
                    </TableRow>


                    <!-- 두번째 줄 / Second row of Clothes -->
                    <TableRow>
                        <TextView
                            android:id="@+id/line2_1"
                            android:layout_marginLeft="10dp"
                            android:layout_height="90dp"
                            android:layout_width="90dp"
                            />

                        <TextView
                            android:id="@+id/line2_2"
                            android:layout_marginLeft="10dp"
                            android:layout_height="90dp"
                            android:layout_width="90dp"
                            />

                        <TextView
                            android:id="@+id/line2_3"
                            android:layout_marginLeft="10dp"
                            android:layout_height="90dp"
                            android:layout_width="90dp"
                            />
                    </TableRow>

                </TableLayout>

            </LinearLayout>

        </FrameLayout>


    </RelativeLayout>
