<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_height="match_parent"
android:layout_width="match_parent">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="20dp">

    <!-- 타이틀 / Title -->
    <TextView
        android:id="@+id/O-K"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/one"
        android:text="O-l<"
        android:textSize="45dp" />



    <Button
        android:id="@+id/btnMenu"
        android:layout_marginTop="25dp"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:background="@drawable/Menu_button"
        />
    
    <LinearLayout
        android:id="@+id/layout_add_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/O-K"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/add_image"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/camera" />


    </LinearLayout>

    <TableLayout
        android:id="@+id/info_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_add_image"
        android:layout_marginTop="30dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="구분"/>

            <RadioGroup
                android:id="@+id/classification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상의"/>

                <RadioButton
                    android:id="@+id/bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="하의"/>

                <RadioButton
                    android:id="@+id/outer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="외투"/>

                <RadioButton
                    android:id="@+id/ect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기타"/>

            </RadioGroup>
        </TableRow>

        <TableRow
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="두께"/>

            <RadioGroup
                android:id="@+id/thickness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/thin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="얇음"/>

                <RadioButton
                    android:id="@+id/medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보통"/>

                <RadioButton
                    android:id="@+id/thick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="두꺼움"/>

            </RadioGroup>
        </TableRow>

        <TableRow
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="소매 길이"/>

            <RadioGroup
                android:id="@+id/sleeves_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/none_sleeves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="없다"/>

                <RadioButton
                    android:id="@+id/short_sleeves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="반팔/7부/9부"/>

                <RadioButton
                    android:id="@+id/long_sleeves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="긴팔"/>

            </RadioGroup>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/add_clothe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_table"
        android:layout_alignRight="@+id/info_table"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:text="추가하기"/>

</RelativeLayout>
</ScrollView>
