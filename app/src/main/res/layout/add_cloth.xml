<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_height="match_parent"
android:layout_width="match_parent">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!-- 타이틀 / Title -->
    <TextView
        android:id="@+id/O-K"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/one"
        android:text="O-K"
        android:textSize="45dp"/>

    <!--슬라이드 메뉴-->
    <Button
        android:id="@+id/btnMenu"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/menu_button"
        />

    <LinearLayout
        android:id="@+id/slideMenu"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#44000000"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            android:fontFamily="@font/one"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:layout_gravity="center"
            android:text="MENU"/>

        <Button
            android:id="@+id/closet_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/add_button"
            android:gravity="left|center_vertical"
            android:fontFamily="@font/one"
            android:textSize="30dp"
            android:text="옷장"/>

        <Button
            android:id="@+id/weather_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/add_button"
            android:gravity="left|center_vertical"
            android:fontFamily="@font/one"
            android:textSize="30dp"
            android:text="날씨"/>

        <Button
            android:id="@+id/coordi_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/add_button"
            android:gravity="left|center_vertical"
            android:fontFamily="@font/one"
            android:textSize="30dp"
            android:text="코디"/>

        <Button
            android:id="@+id/setting_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/add_button"
            android:gravity="left|center_vertical"
            android:fontFamily="@font/one"
            android:textSize="30dp"
            android:text="설정"/>
    </LinearLayout>

    <!--Body-->
    <LinearLayout
        android:id="@+id/layout_add_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/O-K"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/camera" />

        <Button
            android:id="@+id/btn_add_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="mOnClick"
            android:text="사진 추가"/>


    </LinearLayout>

    <TableLayout
        android:id="@+id/info_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_add_image"
        android:layout_marginTop="20dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="구분"/>

            <RadioGroup
                android:id="@+id/classification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상의"/>

                <RadioButton
                    android:id="@+id/bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="하의"/>

                <RadioButton
                    android:id="@+id/outer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="외투"/>

                <RadioButton
                    android:id="@+id/ect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기타"/>

            </RadioGroup>
        </TableRow>

        <TableRow
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="두께"/>

            <RadioGroup
                android:id="@+id/thickness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/thin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="얇음"/>

                <RadioButton
                    android:id="@+id/medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보통"/>

                <RadioButton
                    android:id="@+id/thick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="두꺼움"/>

            </RadioGroup>
        </TableRow>

        <TableRow
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="길이"/>

            <RadioGroup
                android:id="@+id/length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/short_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="짧다"/>

                <RadioButton
                    android:id="@+id/medium_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중간/7부~9부"/>

                <RadioButton
                    android:id="@+id/long_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="길다"/>

            </RadioGroup>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/add_clothe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_table"
        android:layout_alignRight="@+id/info_table"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:onClick="addOnClick"
        android:text="추가하기"/>

</RelativeLayout>
</ScrollView>
